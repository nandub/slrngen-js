{
  "name": "node-sgen",
  "version": "0.0.0-semantically-released",
  "description": "Slave Register Number Generator",
  "homepage": "https://github.com/nandub/slrngen-js",
  "author": "Fernando Ortiz",
  "files": [
    "bin",
    "sgen.js",
    "sgen-min.js",
    "sgen-min.map",
    "README.md",
    "LICENSE"
  ],
  "main": "sgen.js",
  "bin": {
    "sgen": "bin/sgen"
  },
  "keywords": [
    "slrngen"
  ],
  "scripts": {
    "test": "./test.sh",
    "build": "./build.sh",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "superagent": "2.0.0"
  },
  "devDependencies": {
    "conventional-commit-types": "2.0.0",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "jasmine-node": "1.14.5",
    "jshint": "2.9.2",
    "phantomjs-prebuilt": "2.1.12",
    "semantic-release": "4.3.5",
    "serve": "1.4.0",
    "validate-commit-msg": "2.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nandub/slrngen-js.git"
  },
  "bugs": {
    "url": "https://github.com/nandub/slrngen-js/issues"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (and consider using http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ],
      "warnOnFail": false
    }
  }
}
